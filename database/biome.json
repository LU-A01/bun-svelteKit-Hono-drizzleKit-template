{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["../biome.json"],
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      ".turbo",
      ".bun",
      "migrations",
      "drizzle"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  }
}
